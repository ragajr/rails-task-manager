<div class="d-flex justify-content-between align-items-center">
  <h1><%= @task[:title] %></h1>
  <%= link_to "Edit task", edit_path(@task), class: "btn btn-primary fw-bold p-2" %>
</div>
<p class="card p-4 border-3 mt-3"><%= @task[:details] %></p>
<p class="d-inline-block">This task is <%= @task.completed ? "completed" : "uncompleted" %></p>
<div>
  <i class="fa-solid fa-rotate-right text-primary"></i>
  <%= link_to "Back to list", tasks_path%>
</div>
