<h1>My tasks</h1>
<% @tasks.each do |task| %>
  <div>
    <input type="checkbox" <%= task.completed ? "checked" : "" %>>
    <%= link_to task[:title], task_path(task) %>
    <%= link_to "", task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "fa-solid fa-trash"%>
  </div>
<% end %>
<%= link_to "+ Add a new task", new_path %>
